<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="180"
        android:src="@drawable/background_moon"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:padding="@dimen/widget_additional_margin"/>

    <ImageView
        android:id="@+id/imageViewForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="180"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:padding="@dimen/widget_additional_margin"/>

    <ImageView
        android:id="@+id/viewScrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:src="@drawable/moon_scrim"
        android:padding="@dimen/widget_additional_margin"/>

    <TextView
        android:id="@+id/textViewPhaseDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/WidgetPhaseDescription"
        tools:text="Phase..."
        android:padding="@dimen/widget_additional_margin"/>

</RelativeLayout>