<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppPhaseDescription">
        <item name="android:textSize">@dimen/app_phase_description_textsize</item>
        <item name="android:textColor">@color/colorPhaseDescription</item>
    </style>

    <style name="WidgetPhaseDescription">
        <item name="android:textSize">@dimen/widget_phase_description_textsize</item>
        <item name="android:textColor">@color/colorPhaseDescription</item>
    </style>

    <style name="Acknowledgments">
        <item name="android:textSize">@dimen/acknowledgments_textsize</item>
        <item name="android:textColor">@color/colorAcknowledgments</item>
    </style>

</resources>
